<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigtaion_graph"
    app:startDestination="@id/registrationFramework">

    <fragment
        android:id="@+id/registrationFramework"
        android:name="com.example.navigationframework.registrationFramework"
        android:label="fragment_registration_framework"
        tools:layout="@layout/fragment_registration_framework" >
        <action
            android:id="@+id/action_registrationFramework_to_loginFramework"
            app:destination="@id/loginFramework" />
        <action
            android:id="@+id/action_registrationFramework_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFramework"
        android:name="com.example.navigationframework.loginFramework"
        android:label="fragment_login_framework"
        tools:layout="@layout/fragment_login_framework" >
        <action
            android:id="@+id/action_loginFramework_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.navigationframework.mainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.navigationframework.noteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" />
</navigation>